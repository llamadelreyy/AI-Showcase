# Local AI Demo Stack Configuration
# Copy this file to .env and customize as needed

# Model Configuration
LLM_MODEL=microsoft/DialoGPT-medium
WHISPER_MODEL=base
VLM_MODEL=Salesforce/blip2-opt-2.7b

# Ollama Configuration (optional)
OLLAMA_BASE_URL=http://localhost:11434
OLLAMA_MODEL=llama2:7b-chat

# Hardware Settings
DEVICE=auto
MAX_MEMORY_GB=8

# Audio Settings
SAMPLE_RATE=16000
CHUNK_LENGTH=30

# UI Settings
GRADIO_PORT=7860
GRADIO_SHARE=false

# Performance Settings
MAX_TOKENS=512
TEMPERATURE=0.7
MAX_HISTORY=10